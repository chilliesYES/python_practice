from pathlib import Path
import time
from datetime import datetime
fapath = Path(input('your path:'))

class filebody:
	name=None
	size=None
	location=None
	mtime=None
	def __init__(self,name,size,location,mtime):
		self.name=name
		self.size=size/(1024*1024)
		self.location=location
		self.mtime = time.strftime("%Y年%m月%d日 %H:%M:%S", time.localtime(mtime))
		#self.mtime=time.ctime(mtime)

class filema:
	tank=[]
	def __init__(self,fapath):
		self.fapath=fapath
	def showall(self,path):
		for each in path.iterdir():
				filestat=each.stat()
				name=each.name
				size=filestat.st_size
				location=each.resolve()
				mtime=filestat.st_mtime
				self.tank.append(filebody(name,size,location,mtime))
				if each.is_file():
					print(each.resolve())
				else:
					self.showall(each)
	def sefile(self,ufile):
		for i in self.tank:
			if ufile in i.name:
				print(f'{i.name} \n size:{i.size:.3f}M \n location:{i.location} \n mtime;{i.mtime}\n')
		print('no file')


f=filema(fapath)
f.showall(fapath)
ask=input('your searching file:')
f.sefile(ask)
		
