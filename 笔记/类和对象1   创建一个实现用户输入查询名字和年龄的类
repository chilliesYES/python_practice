import re
class Person:
    name=None
    age=None
    print("看我看我")#当一个类被定义时里面能执行的代码都会执行
    def set_age(self):
        while True:
            try:
                self.age=int(input('please enter your age:'))
                break
            except:
                print('please enter an number!')

    def set_name(self):
            a=input('please enter your name:')
            def is_valid_chinese_name(name):
                # 定义正则表达式，匹配所有常见的中文字符
                chinese_name_regex = re.compile(r'^[\u4e00-\u9fa5]{2,4}$')
                return bool(chinese_name_regex.match(name))
            if is_valid_chinese_name(a)==True:
                self.name = a
            else:
                print('please enter a valid name!')
    def get_name(self):
        if self.name!=None:
            return self.name
        else:
            self.set_name()
    def get_age(self):
        if self.age!=None:
            return self.age
        else:
            self.set_age()

p1 = Person()
p2 = Person()
p1.get_age()
